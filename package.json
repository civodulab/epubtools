{
    "name": "epubtools",
    "displayName": "Epub Tools",
    "description": "Utilitaire Epub3",
    "version": "1.7.4",
    "publisher": "civodulab",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "icon": "icon.png",
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.epubA11Y",
                "title": "A11Y",
                "description": "Outils d'accessibilité",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubSpanPageNoir",
                "title": "<span...>{numPage}</span> => <span {epub:type} />",
                "description": "Transforme les span epubTools-numPage-style en pagebreak",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubManifest",
                "title": "Manifest",
                "description": "Modifie le manifest dans l'opf",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubTOC",
                "title": "Table des matières",
                "description": "Modifie les tables des matières xhtml et ncx",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubTitle",
                "title": "premier <h.> => <title>",
                "description": "Copie le premier titre des pages xhtml dans la balise title de chaque page",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubPageList",
                "title": "Création Page Liste",
                "description": "Création de la 'page-list' dans le fichier de la table des matières",
                "category": "EpubTools"
            },
            {
                "command": "extension.epubError",
                "title": "Problèmes ?",
                "description": "Affiche les problèmes dans SORTIE",
                "category": "EpubTools"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Epub configuration",
            "properties": {
                "epub.activerA11ylint": {
                    "type": "boolean",
                    "default": true,
                    "description": "Active a11ylint."
                },
                "epub.niveauTitre": {
                    "type": "integer",
                    "default": 3,
                    "description": "Niveau de titre pour la table des matières."
                },
                "epub.classeTDM": {
                    "type": "string",
                    "default": "ol-toc",
                    "description": "Classe appliquée au <ol>"
                },
                "epub.titreTDM": {
                    "type": "object",
                    "default": {
                        "titre": "Table des matières",
                        "balise": "h1",
                        "classe": "titre1"
                    },
                    "description": "Titre de la table des matières"
                },
                "epub.ancreTDM": {
                    "type": "object",
                    "default": {
                        "ajouterAncre": true,
                        "nomAncre": "toc-epubtools"
                    },
                    "description": "Ancre sur les titres"
                },
                "epub.coverImage": {
                    "type": "string",
                    "default": "cover",
                    "description": "Nom de la couverture de l'ouvrage"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/civodulab/epubtools.git"
    }
}